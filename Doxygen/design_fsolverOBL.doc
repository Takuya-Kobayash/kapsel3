\section sec_design_fsolverOBL_tensor Crash Course in Tensor Calculus
\f{equation*}{
G^{\alpha\beta} = \oblv{E}^\alpha\cdot\oblv{E}^\beta\qquad
G_{\alpha\beta} = \oblv{E}_\alpha\cdot\oblv{E}_\beta       
\f}
\f{equation*}{
\obl{A}^\alpha = G^{\alpha\beta}\obl{A}_\beta \qquad
\obl{A}_\alpha = G_{\alpha\beta}\obl{A}^\beta
\f}
\f{align*}{
\oblv{A}\cdot\oblv{B} &= A_\alpha B^\alpha = A^\alpha B_\alpha\\
\oblv{A}\times \oblv{B} &= 
 e^{\alpha\beta\gamma}A_\alpha B_\beta\oblv{E}_\gamma =
 e_{\alpha\beta\gamma}A^\alpha B^\beta\oblv{E}^\gamma
\f}
\f{align*}{
e_{\alpha\beta\gamma} &= \sqrt{g} \epsilon_{\alpha\beta\gamma} \\
e^{\alpha\beta\gamma} &= \frac{1}{\sqrt{g}} \epsilon^{\alpha\beta\gamma}
\f}

\f{align*}{
  \nabla &= \oblv{E}^\alpha \partial_\alpha \\
  \nabla A &= \left(\partial_\alpha A\right) \oblv{E}^{\alpha} 
  = \left(G^{\alpha\beta}\partial_\alpha A\right) \oblv{E}_\beta\\
  \nabla\cdot\oblv{A} &= \nabla_\alpha A^\alpha\\
  \nabla\times\oblv{A} &= e^{\alpha\beta\gamma}
  \left(\nabla_\alpha A_\beta\right)\,\oblv{E}_\gamma = 
  e_{\alpha\beta\gamma} \left(\nabla^{\alpha}A^\beta\right) \oblv{E}^\gamma
\f}

\f{align*}{
\nabla_\alpha A^\beta &= \partial_\alpha A^\beta + \Gamma^{\beta}_{\alpha\gamma} A^\gamma \\
\nabla_\alpha A_\beta &= \partial_\alpha A_\beta - \Gamma^{\beta}_{\alpha\gamma} A_\gamma \\
\nabla^\alpha A^\beta &= G^{\alpha\kappa}\nabla_\kappa A^\beta= 
\partial^\alpha A^\beta +  G^{\alpha\kappa}\Gamma^{\beta}_{\kappa\gamma}
A^\gamma\\
\nabla^\alpha A_\beta &= G^{\alpha\kappa}\nabla_\kappa A_\beta =
 \partial^\alpha A_\beta - G^{\alpha\kappa}\Gamma^{\beta}_{\kappa\gamma}
 A_\gamma\\
\Gamma^\beta_{\alpha\gamma} &= \frac{1}{2}G^{\beta\kappa}
\left(\partial_\alpha G_{\gamma\kappa} + 
      \partial_\gamma G_{\alpha\kappa} - 
      \partial_\kappa G_{\alpha\gamma}\right)
\f}

